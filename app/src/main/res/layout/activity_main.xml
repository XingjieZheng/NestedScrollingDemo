<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xingjiezheng.nestedscrollingdemo.acitivity.MainActivity">

    <com.xingjiezheng.nestedscrollingdemo.widget.NestedScrollParentView
        android:id="@+id/nestedScrollParentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.xingjiezheng.nestedscrollingdemo.widget.HeaderTabView
            android:id="@+id/headerTabView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_tab_view_height" />

        <com.xingjiezheng.nestedscrollingdemo.widget.HeaderTabToolBarView
            android:id="@+id/headerTabToolBarView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_tool_bar_height" />

    </com.xingjiezheng.nestedscrollingdemo.widget.NestedScrollParentView>

</RelativeLayout>
